<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.eztruck.eztruckcustomer.EditTextUtil.NormalEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edit_first_name"
            android:layout_weight="1"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:background="@color/white"
            android:hint="@string/first_name"
            android:textSize="@dimen/normal_text_size"
            android:textColor="?attr/colorNormal"></com.eztruck.eztruckcustomer.EditTextUtil.NormalEditText>

        <com.eztruck.eztruckcustomer.EditTextUtil.NormalEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/edit_last_name"
            android:layout_weight="1"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:background="@color/white"
            android:hint="@string/last_name"
            android:textSize="@dimen/normal_text_size"
            android:textColor="?attr/colorNormal"></com.eztruck.eztruckcustomer.EditTextUtil.NormalEditText>


        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_done"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:visibility="visible"
                android:src="@drawable/ic_go"
                app:tint="?attr/colorTintColourFull"></ImageView>


            <ProgressBar
                android:id="@+id/progress_coupon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:gp_color="?attr/colorNormal"
                android:gp_duration="800"
                android:visibility="gone"
                android:gp_figure_padding="2dp"
                android:gp_number_of_angles="20"
                android:gp_type="triangle" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>